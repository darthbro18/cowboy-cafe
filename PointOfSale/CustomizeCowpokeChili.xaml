<UserControl x:Class="PointOfSale.CustomizeCowpokeChili"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <CheckBox FontSize="30" IsChecked="{Binding Path=Cheese}" Grid.Column="0">Cheese</CheckBox>
        <CheckBox FontSize="30" IsChecked="{Binding Path=SourCream}" Grid.Row="1">Sour Cream</CheckBox>
        <CheckBox FontSize="30" IsChecked="{Binding Path=GreenOnions}" Grid.Row="2">Green Onions</CheckBox>
        <CheckBox FontSize="30" IsChecked="{Binding Path=TortillaStrips}" Grid.Row="3">Tortilla Strips</CheckBox>
    </Grid>
</UserControl>
